{
  "name": "h1api",
  "version": "1.0.0",
  "description": "",
  "main": "src.js",
  "private": true,
  "scripts": {
    "dev": "NODE_ENV=development nodemon build/app.js",
    "w:dev": "set NODE_ENV=development && nodemon build/app.js",
    "build": "tsc && copyfiles -u 1 ./src/**/*.html ./src/**/*.mjml ./src/**/*.pdf ./build",
    "tsc": "tsc",
    "tsw": "rm -rf build; yarn build; tsc -w",
    "w:tsw": "rmdir /S /Q build && yarn build && npx tsc --watch"
  },
  "author": "",
  "license": "Hipoteca Primero SL Â© All right reserved",
  "dependencies": {
    "@hapi/hapi": "^20.0.3",
    "@hapi/joi": "^17.1.1",
    "copyfiles": "^2.4.1",
    "mjml": "^4.8.1"
  },
  "devDependencies": {
    "@types/node": "^14.14.22",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "tsc": "^1.20150623.0",
    "typescript": "^4.1.3"
  },
  "nodemonConfig": {
    "ignore": [
      "test/*",
      "docs/*"
    ],
    "delay": "2500",
    "watch": "build"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "roots": [
      "tests"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest",
      "^.+\\.js$": "babel-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "collectCoverage": true,
    "verbose": true,
    "coverageReporters": [
      "json",
      "html",
      "lcov",
      "text",
      "clover"
    ]
  }
}
